{
  "name": "recruit-inc-front",
  "version": "1.0.0",
  "description": "Recruit Platform",
  "main": "webpack.config.js",
  "scripts": {
    "test": "jest",
    "build": "tsc && webpack --config webpack.config.js",
    "start": "npm run build && ts-node ./src/server.ts",
    "prettify": "prettier --single-quote --trailing-comma es5 --write \"*(src)/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm install"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,html,ts,tsx}": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test-preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.(ts|tsx|js)"
    ]
  },
  "keywords": [],
  "author": "SOEN 490 - Team Abada",
  "license": "ISC",
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.12",
    "@types/react": "^16.7.21",
    "@types/react-dom": "^16.0.11",
    "@types/react-js-pagination": "^3.0.1",
    "css-loader": "^1.0.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.3",
    "jest": "^24.0.0",
    "prettier": "^1.15.3",
    "react-test-renderer": "^16.7.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^4.3.0",
    "typescript": "^3.2.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.8.3",
    "webpack-cli": "2.1.3",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2"
  },
  "dependencies": {
    "@material-ui/core": "^3.6.1",
    "@material-ui/icons": "^3.0.1",
    "@types/react-autosuggest": "^9.3.6",
    "@types/react-select": "^2.0.10",
    "awesome-typescript-loader": "^5.2.1",
    "dotenv": "^6.2.0",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.16.3",
    "fs": "0.0.1-security",
    "lint-staged": "^8.1.0",
    "react": "^16.7.0",
    "react-autosuggest": "^9.4.2",
    "react-dom": "^16.7.0",
    "react-js-pagination": "^3.0.2",
    "react-select": "^2.1.2",
    "ts-node": "^7.0.1",
    "winston": "^3.1.0"
  }
}
