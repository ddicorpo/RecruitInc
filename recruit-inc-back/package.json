{
  "name": "recruit-inc-back",
  "version": "1.1.0",
  "description": "",
  "main": "./dist/server.js",
  "scripts": {
    "test": "npm run build && mocha -r ts-node/register test/**/*.spec.ts --recursive \"test/**/*.test.ts\"",
    "testWithCoverage": "npm run build && nyc -r lcov -e .ts -x \"*.test.ts\" mocha -r ts-node/register test/**/*.test.ts && nyc report",
    "build": "tsc",
    "dev": "ts-node ./src/server.ts",
    "start": "npm run dev",
    "prod": "npm run build && node ./dist/server.js",
    "demo": "npm run dev | lt --port 6969 --subdomain recruit-back ",
    "prettify": "prettier --single-quote --trailing-comma es5 --write \"*(src|test)/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm install"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,html,ts,tsx}": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.5",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.10.1",
    "chai": "^4.1.2",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "mocha": "^5.2.0",
    "nock": "^10.0.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "prettier": "1.15.1",
    "ts-mockito": "^2.3.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "cron": "^1.6.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "fs": "0.0.1-security",
    "localtunnel": "^1.9.1",
    "mongoose": "^5.0.0",
    "node-fetch": "^2.2.0",
    "reflect-metadata": "^0.1.12",
    "ts-sinon": "^1.0.12",
    "typegoose": "^5.4.1",
    "winston": "^3.1.0"
  }
